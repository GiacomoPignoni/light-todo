    "core-js": "3.6.5",
    "cross-env": "7.0.2",
    "electron": "11.0.3",
    "electron-builder": "22.9.1",
    "electron-reload": "1.5.0",
    "eslint": "7.13.0",
    "eslint-plugin-import": "2.22.1",
